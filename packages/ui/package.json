{
    "name": "@openask/ui",
    "version": "1.0.0",
    "private": true,
    "description": "Reusable UI components for OpenAsk",
    "type": "module",
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        }
    },
    "files": [
        "dist"
    ],
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc",
        "lint": "eslint \"src/**/*.{ts,tsx}\" --ignore-pattern \"**/__tests__/**\"",
        "typecheck": "tsc --noEmit",
        "test": "vitest run"
    },
    "peerDependencies": {
        "react": "^18.2.0",
        "react-dom": "^18.2.0"
    },
    "dependencies": {
        "react-markdown": "^9.0.1",
        "remark-gfm": "^4.0.0"
    },
    "devDependencies": {
        "@openask/config": "workspace:*",
        "@types/react": "^18.2.45",
        "@types/react-dom": "^18.2.18",
        "eslint": "^8.56.0",
        "@typescript-eslint/eslint-plugin": "^6.15.0",
        "@typescript-eslint/parser": "^6.15.0",
        "typescript": "^5.3.3",
        "vitest": "^1.0.4"
    }
}